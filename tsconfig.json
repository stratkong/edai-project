{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "WebWorker", "ScriptHost"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@AnimObjects2D/*": ["./src/AnimObjects2D/*"],
      "@AnimObjects3D/*": ["./src/AnimObjects3D/*"],
      "@auxiliary/*": ["./src/auxiliary/*"],
      "@core/*": ["./src/core/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@transitions/*": ["./src/transitions/*"],
      "@ui/*": ["./src/ui/*"],
      "@workers/*": ["./src/workers/*"],
      "@enums/*": ["./src/enums/*"],
    }
  },
}
